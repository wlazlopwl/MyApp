<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">





    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:orientation="horizontal">




            <android.support.v7.widget.AppCompatImageView

                android:id="@+id/product_cart_image"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:src="@drawable/ic_dashboard_black_24dp"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                >





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >

                        <TextView
                            android:id="@+id/product_cart_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NAZWA"
                            android:textSize="20dp"
                            android:layout_marginBottom="20dp"
                            />


                        <ImageView
                            android:id="@+id/deleteProductIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_trash"
                            android:tint="@android:color/holo_red_light"

                            >

                        </ImageView>
                        </RelativeLayout>
                    </LinearLayout>





            <TextView
                android:id="@+id/cart_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text=""

                />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"


                    >


                    <LinearLayout
                        android:id="@+id/plus_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="10dp"

                        >


                        <ImageView
                            android:id="@+id/btn_minus_product_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:src="@drawable/ic_minus">

                        </ImageView>


                        <EditText
                            android:id="@+id/cart_quantity_plus_minus"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:hint="0"
                            android:gravity="center"
                            />
                        <ImageView
                            android:id="@+id/btn_plus_product_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:src="@drawable/ic_plus">

                        </ImageView>

                    </LinearLayout>

                </RelativeLayout>

        </LinearLayout>



        </LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>


</LinearLayout>
