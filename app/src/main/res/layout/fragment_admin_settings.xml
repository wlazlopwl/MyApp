<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/admin_fragment_settings"
    android:background="#f5f5f5"
    >


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">


       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:layout_above="@+id/cardview_logout"
           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="left|center_vertical"
                   android:paddingLeft="10dp"
                   android:background="@android:color/background_light"
                   android:text="Edytuj/usuń kategorie" />
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="left|center_vertical"
                   android:paddingLeft="10dp"
                   android:background="@android:color/background_light"
                   android:text="Edytuj/usuń produkt" />

               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="left|center_vertical"
                   android:paddingLeft="10dp"
                   android:background="@android:color/background_light"
                   android:text="Edytuj/usuń użytkownika" />
               <Button
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="left|center_vertical"
                   android:paddingLeft="10dp"
                   android:background="@android:color/background_light"
                   android:text="Edytuj/usuń pracownika" />



           </LinearLayout>


       </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_above="@+id/cardview_logout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <Button
            android:id="@+id/admin_change_mydata_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:background="@android:color/background_light"
            android:text="Edycja profilu" />
            <Button
                android:id="@+id/admin_setting_change_mypassword_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:background="@android:color/background_light"
                android:text="Zmień hasło" />
        <Button
            android:id="@+id/admin_setting_change_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:background="@android:color/background_light"
            android:text="Zmień czas dla zamówień" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:background="@android:color/background_light"
            android:text="Test" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <Button
            android:id="@+id/admin_logout_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_light"
            android:text="Wyloguj" />


    </android.support.v7.widget.CardView>


   </LinearLayout>
</RelativeLayout>